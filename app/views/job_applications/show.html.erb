<div class="container py-8">
  <div class="max-w-2xl mx-auto">
    <div class="flex-between mb-6">
      <h1>Job Application Details</h1>
      <div class="flex space-x-2">
        <%= link_to "Edit", edit_job_application_path(@job_application), class: "btn btn-primary" %>
        <%= link_to "Back", job_applications_path, class: "btn btn-secondary" %>
      </div>
    </div>

    <div class="card space-y-4">
      <div>
        <h3>Date Applied</h3>
        <p><%= @job_application.date_applied&.strftime("%B %d, %Y") %></p>
      </div>

      <div>
        <h3>Company Name</h3>
        <p><%= @job_application.company_name %></p>
      </div>

      <div>
        <h3>Job Link</h3>
        <p>
          <%= link_to "View Job", @job_application.job_link, target: "_blank", rel: "noopener noreferrer" %>
        </p>
      </div>

      <div>
        <h3>Tech Stacks</h3>
        <div class="mt-2">
          <% @job_application.tech_stacks.each do |tech| %>
            <span class="tech-tag">
              <%= tech.name %>
            </span>
          <% end %>
        </div>
      </div>

      <div>
        <h3>Status</h3>
        <span class="status-badge">
          <%= @job_application.application_status.name %>
        </span>
      </div>
    </div>
  </div>
</div> 